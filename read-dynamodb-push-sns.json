{
    "Version": "2012-10-17",
    "Statement": [
     {
      "Effect": "Allow",
      "Action": [
       "dynamodb:PutItem",
       "dynamodb:UpdateItem",
       "dynamodb:GetItem",
       "dynamodb:Scan",
       "dynamodb:Query"
      ],
      "Resource": "arn:aws:dynamodb:us-east-1:381492312241:table/InventoryTable"
     },
     {
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetRecords",
        "dynamodb:GetShardIterator",
        "dynamodb:DescribeStream",
        "dynamodb:ListStreams"
      ],
      "Resource": "arn:aws:dynamodb:us-east-1:381492312241:table/InventoryTable/stream/*"
    },
     {
      "Effect": "Allow",
      "Action": "sns:Publish",
      "Resource": "arn:aws:sns:us-east-1:381492312241:LowInventoryTopic"
     }
    ]
}